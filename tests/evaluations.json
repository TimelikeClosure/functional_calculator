            "expected": "0"
        }
    },
    "single_operations": {
        "addition": {
            "input": "1+2=",
            "expected": "3"
        },
        "subtraction": {
            "input": "1-2=",
            "expected": "-1"
        },
        "multiplication": {
            "input": "1*2=",
            "expected": "2"
        },
        "division": {
            "input": "1/2=",
            "expected": "0.5"
        }
    },
    "comprehensive_operations": {
        "successive_operation": {
            "input": "1+1+2=",
            "expected": "4"
        },
        "decimals": {
            "input": "1.1+1.1=",
            "expected": "2.2"
        },
        "multiple_decimals": {
            "input": "1...1+1...1=",
            "expected": "2.2"
        },
        "multiple_operation_keys": {
            "input": "1++++2=",
            "expected": "3"
        },
        "changing_operation_keys": {
            "input": "1+-*2=",
            "expected": "2"
        },
        "operation_repeat": {
            "input": "1+1===",
            "expected": "4"
