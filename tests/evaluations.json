            "expected": "9"
        },
        "missing_operation": {
            "input": "3=",
            "expected": "3"
        },
        "missing_operands": {
            "input": "====",
            "expected": "0"
        }
    },
    "extra_operations": {
        "order_of_ops": {
            "input": "1+3/4+10*2=",
